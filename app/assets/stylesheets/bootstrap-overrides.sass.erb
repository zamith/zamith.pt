$gb-blue: #0091DA
$nav-bar-background: #1B1B1B

/* Navbar */

body
  padding-top: 60px

.navbar .nav
  margin-top: 4px

.navbar-inverse .brand, .navbar-inverse .nav > li > a
  color: #BEBEBE

.navbar-inverse .nav-pills > .active > a, .navbar-inverse .nav-pills > .active > a:hover
  background-color: $gb-blue

.navbar .nav > li > a:hover
  color: $gb-blue

.navbar .nav > li > a
  padding: 7px 12px

/* Portrait tablet to landscape and desktop */
@media (max-width: 979px)
  .navbar-fixed-top
    position: fixed

  .navbar-inverse .nav-pills > .active > a, .navbar-inverse .nav-pills > .active > a:hover
    background-color: $nav-bar-background
    color: $gb-blue

  .navbar .nav > li > a:hover
    color: #BEBEBE

/* Landscape phone to portrait tablet */
@media (max-width: 767px)
  .navbar-fixed-top
    margin-right: 0px
    margin-left: 0px

/* Landscape phones and down */
@media (max-width: 480px)
  .hero-unit
    h1
      font-size: 40px
    p
      font-size: 14px

/* Typography */

.hero-unit h1
  color: $gb-blue
  margin-bottom: 0px
